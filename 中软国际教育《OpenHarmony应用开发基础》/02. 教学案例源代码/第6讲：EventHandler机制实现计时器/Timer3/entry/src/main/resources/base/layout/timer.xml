<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                 ohos:width="match_parent"
                 ohos:height="match_parent"
                 ohos:background_element="black">
    <Text
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text="00:00:00"
            ohos:text_size="32fp"
            ohos:id="$+id:t_time"/>
    <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_size="20fp"
            ohos:background_element="$graphic:bg_element"
            ohos:text_color="white"
            ohos:text_alignment="center"
            ohos:text="鸿蒙系统，中软卓越 计时器"
            ohos:id="$+id:t_title"
            ohos:top_padding="10vp"
            ohos:bottom_padding="10vp"
            ohos:left_padding="60vp"
            ohos:right_padding="60vp"
            ohos:align_parent_top="true"/>
    <Button
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_size="20fp"
            ohos:background_element="$graphic:bg_element"
            ohos:text_color="white"
            ohos:text_alignment="center"
            ohos:text="开始"
            ohos:id="$+id:b_button"
            ohos:top_padding="10vp"
            ohos:bottom_padding="10vp"
            ohos:left_padding="60vp"
            ohos:right_padding="60vp"
            ohos:align_parent_bottom="true"
            />
</DependentLayout>