<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:id="$+id:root_layout"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   ohos:background_element="#efefef"
                   ohos:orientation="vertical">

    <DependentLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:margin="0vp"
            ohos:padding="5vp"
            ohos:background_element="white">

        <Text
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:text="随手记便签"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:text_size="50"
                ohos:id="$+id:title"
                ohos:text_color="black"/>

        <Button
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:text="退出"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:background_element="blue"
                ohos:id="$+id:btn_exit"
                ohos:align_parent_left="true"
                ohos:text_size="50"
                ohos:text_color="white"/>

        <Button
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:text="添加"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:align_parent_right="right "
                ohos:background_element="blue"
                ohos:id="$+id:btn_addnote"
                ohos:text_size="50"
                ohos:text_color="white"/>
    </DependentLayout>

    <ListContainer
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:margin="5vp"
            ohos:id="$+id:list_container">

    </ListContainer>

    <DependentLayout
            ohos:width="match_parent"
            ohos:background_element="white"
            ohos:margin="5vp"
            ohos:height="match_parent">

        <Text
                ohos:width="match_parent"
                ohos:height="match_parent"
                ohos:text="还没有便签，赶快添加吧！"
                ohos:text_alignment="center"
                ohos:text_color="#e0e0e0"
                ohos:text_size="70fp"
                ohos:center_in_parent="true"
                ohos:id="$+id:i_notice"/>
    </DependentLayout>
</DirectionalLayout>