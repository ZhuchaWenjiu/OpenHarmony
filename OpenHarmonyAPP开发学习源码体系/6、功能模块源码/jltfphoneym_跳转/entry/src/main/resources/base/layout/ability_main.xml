<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$media:image3">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="蛟龙腾飞"
            ohos:text_size="80px"
            ohos:top_margin="150px"
            ohos:left_margin="340px"
            ohos:text_color="white"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content">
        <Image
            ohos:width="680px"
            ohos:height="680px"
            ohos:image_src="$media:index6.jpg"
            ohos:left_margin="160px"
            ohos:top_margin="40px"/>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:weight="3">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="70px"
            ohos:multiple_lines="true"
            ohos:left_margin="150px"
            ohos:text="带你从传统的互联网、"
            ohos:top_margin="120px"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="70px"
            ohos:multiple_lines="true"
            ohos:left_margin="150px"
            ohos:top_margin="10px"
            ohos:text="移动互联网时代"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="70px"
            ohos:multiple_lines="true"
            ohos:left_margin="150px"
            ohos:top_margin="10px"
            ohos:text="跳转到万物互联的智能世界!"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="70px"
            ohos:multiple_lines="true"
            ohos:left_margin="150px"
            ohos:top_margin="10px"
            ohos:text="马上创建体验个人、"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="70px"
            ohos:multiple_lines="true"
            ohos:left_margin="150px"
            ohos:top_margin="10px"
            ohos:text="公司或组织的鸿蒙应用吧！"
            ohos:text_color="white"/>
        <Button
            ohos:id="$+id:jltfbutton"
            ohos:width="680px"
            ohos:height="120px"
            ohos:text="点击了解更多"
            ohos:text_color="white"
            ohos:text_size="100px"
            ohos:top_margin="100px"
            ohos:left_margin="200px"
            ohos:background_element="$graphic:background_ability_main"/>
    </DirectionalLayout>

</DirectionalLayout>