<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:id="$+id:device_list"
                   ohos:height="match_parent"
                   ohos:width="match_parent"
                   ohos:orientation="vertical">
    <Text
        ohos:id="$+id:shoppingcarttext"
        ohos:height="40vp"
        ohos:width="match_content"
        ohos:text="Portable equipment"
        ohos:text_size="20fp"/>
    <ListContainer
        ohos:id="$+id:device_list_view"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:bottom_padding="15vp"
        ohos:weight="1">
    </ListContainer>
    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#e8e8e8">
    </Component>

</DirectionalLayout>
