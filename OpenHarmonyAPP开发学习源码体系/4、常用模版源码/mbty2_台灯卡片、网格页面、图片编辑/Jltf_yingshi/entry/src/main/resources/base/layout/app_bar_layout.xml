<?xml version="1.0" encoding="utf-8"?>

<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:app_bar"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:background_element="$color:title_layout_background_color">

    <DirectionalLayout
        ohos:id="$+id:title_layout"
        ohos:width="match_parent"
        ohos:height="$float:title_width"
        ohos:orientation="horizontal"
        ohos:alignment="left|bottom">
        <Image
            ohos:id="$+id:left_arrow"
            ohos:foreground_element="$media:back"
            ohos:width="$float:image_width"
            ohos:height="$float:image_width"
            ohos:left_margin="$float:main_layout_margin"
            ohos:layout_alignment="center"/>
        <Text
            ohos:id="$+id:title"
            ohos:width="match_content"
            ohos:height="$float:title_text_background_height"
            ohos:text_alignment="vertical_center"
            ohos:text_size="$float:title_text_size"
            ohos:left_margin="$float:title_margin"
            ohos:text="$string:title_text"
            ohos:text_color="$color:title_text_color"
            ohos:layout_alignment="center"/>

    </DirectionalLayout>

</StackLayout>