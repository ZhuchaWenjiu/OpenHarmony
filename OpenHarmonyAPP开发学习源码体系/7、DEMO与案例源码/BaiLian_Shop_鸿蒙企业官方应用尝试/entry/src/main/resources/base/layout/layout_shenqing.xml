<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#FFEEEEEE">
    <DirectionalLayout
        ohos:height="150px"
        ohos:width="match_parent">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="超市申请"
            ohos:text_size="28fp"
            ohos:text_alignment="center"
            ohos:text_weight="700px"/>
    </DirectionalLayout>
    <Component
        ohos:height="300px"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="800px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="150px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="超市名称:"
                ohos:text_size="18fp"
                ohos:text_alignment="right"
                />
            <TextField
                ohos:id="$+id:textfield_name"
                ohos:height="100px"
                ohos:width="0px"
                ohos:weight="2"
                ohos:text_size="18fp"
                ohos:hint="请输入超市名称"
                ohos:left_margin="30px"
                ohos:text_alignment="vertical_center"
                ohos:background_element="$graphic:customer_service"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="150px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="50px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="联系方式:"
                ohos:text_size="18fp"
                ohos:text_alignment="right"
                />
            <TextField
                ohos:id="$+id:textfield_dianhua"
                ohos:height="100px"
                ohos:width="0px"
                ohos:weight="2"
                ohos:text_size="18fp"
                ohos:hint="请输入电话号码"
                ohos:text_alignment="vertical_center"
                ohos:left_margin="30px"
                ohos:background_element="$graphic:customer_service"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="400px"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="50px">
            <Text
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:text="申请时间:"
                ohos:text_size="18fp"
                ohos:text_alignment="right|vertical_center"
                />
            <DatePicker
                ohos:id="$+id:date_pick"
                ohos:height="match_content"
                ohos:width="0px"
                ohos:weight="2"
                ohos:text_size="18fp"
                ohos:min_date="1627747200">

            </DatePicker>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="100px"
        ohos:width="match_parent"
        ohos:top_margin="200px">
        <Button
            ohos:id="$+id:button_shenqing"
            ohos:height="match_parent"
            ohos:width="300px"
            ohos:text="提交申请"
            ohos:text_size="18fp"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="#FFB6B6B6"/>
    </DirectionalLayout>
</DirectionalLayout>