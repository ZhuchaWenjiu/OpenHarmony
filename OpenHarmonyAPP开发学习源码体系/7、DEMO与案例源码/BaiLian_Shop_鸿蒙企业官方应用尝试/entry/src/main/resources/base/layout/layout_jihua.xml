<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="150px"
        ohos:width="match_parent">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="鸿蒙计划"
            ohos:text_size="28fp"
            ohos:text_weight="700px"
            ohos:text_alignment="center"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="1700px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:weilai1"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:weilai2"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:weilai3"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:weilai4"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:weilai5"/>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
</DirectionalLayout>