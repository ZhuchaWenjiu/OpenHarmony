<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="150px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:button_shiping"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="视频宣传"
            ohos:text_size="18fp"
            />
        <Button
            ohos:id="$+id:button_jihua"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="鸿蒙计划"
            ohos:text_size="18fp"
            />
        <Button
            ohos:id="$+id:button_shenqing"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="超市申请"
            ohos:text_size="18fp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="1600px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                    <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent">
                    <Image
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:image_src="$media:bailian"/>
                </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="80px"
                        ohos:width="match_parent">
                        <Text
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:text="门店"
                            ohos:text_size="18fp"/>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="700px"
                        ohos:width="match_parent"
                        ohos:orientation="vertical">
                        <ScrollView
                            ohos:height="match_parent"
                            ohos:width="match_parent">
                            <DirectionalLayout
                                ohos:height="match_content"
                                ohos:width="match_parent"
                                ohos:orientation="vertical">
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="安徽六安店"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:anhui"
                                        />
                                </DirectionalLayout>
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="郴州旗舰店"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:chenzhou"
                                        />
                                </DirectionalLayout>
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="福建南平松溪店"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:fujian"
                                        />
                                </DirectionalLayout>
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="河北邯郸店"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:hebie"
                                        />
                                </DirectionalLayout>
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="湖北仙桃店"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:hubie"
                                        />
                                </DirectionalLayout>
                                <DirectionalLayout
                                    ohos:height="match_content"
                                    ohos:width="match_parent"
                                    ohos:orientation="vertical">
                                    <Text
                                        ohos:height="80px"
                                        ohos:width="match_parent"
                                        ohos:text="渭南"
                                        ohos:text_size="18fp"/>
                                    <Image
                                        ohos:height="match_content"
                                        ohos:width="match_parent"
                                        ohos:image_src="$media:weinan"
                                        />
                                </DirectionalLayout>
                            </DirectionalLayout>
                        </ScrollView>
                    </DirectionalLayout>
                    <DirectionalLayout
                        ohos:height="80px"
                        ohos:width="match_parent">
                        <Text
                            ohos:height="match_parent"
                            ohos:width="match_parent"
                            ohos:text="活动"
                            ohos:text_size="18fp"/>
                    </DirectionalLayout>
                    <DirectionalLayout
        ohos:height="500px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:huodong1"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:huodong2"/>
                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:huodong3"/>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="100px"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="首页"
            ohos:text_size="18fp"/>
        <Button
            ohos:id="$+id:button_my"
            ohos:height="match_parent"
            ohos:width="0px"
            ohos:weight="1"
            ohos:text="我的"
            ohos:text_size="18fp"/>
    </DirectionalLayout>
</DirectionalLayout>