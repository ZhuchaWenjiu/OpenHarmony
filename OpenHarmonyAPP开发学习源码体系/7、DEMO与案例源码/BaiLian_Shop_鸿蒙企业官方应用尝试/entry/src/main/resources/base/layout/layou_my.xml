<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFDDDDDD">
        <Image
            ohos:height="200px"
            ohos:width="match_parent"
            ohos:image_src="$media:bailian_log"
            ohos:scale_x="2.5"
            ohos:scale_y="2.5"
            ohos:top_padding="60px"
            />
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="佰链超市"
            ohos:text_size="20fp"
            ohos:text_alignment="center"
            ohos:top_margin="140px"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FF979797"/>
    </DirectionalLayout>
    <Component
        ohos:height="80px"
        ohos:width="match_parent"/>
    <DirectionalLayout
        ohos:height="10px"
        ohos:width="match_parent">
        <Text
            ohos:height="10px"
            ohos:width="match_parent"
            ohos:background_element="#FFE0E0E0"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="660px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="300px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:tiezi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_shengqing_my"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="我的申请"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:xieyi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_xieyi"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="用户协议"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:weight="1">
                <Image
                    ohos:height="120px"
                    ohos:width="100px"
                    ohos:image_src="$media:yingshi"
                    ohos:layout_alignment="center"
                    ohos:top_padding="20px"
                    />
                <Button
                    ohos:id="$+id:button_shengming"
                    ohos:height="150px"
                    ohos:width="match_parent"
                    ohos:text="隐私声明"
                    ohos:right_margin="10px"
                    ohos:text_size="18fp"
                    />
            </DirectionalLayout>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>