<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请对照答案，检查对错。"
        ohos:text_size="25fp"
        ohos:text_color="red"
        ohos:top_margin="40px"
        ohos:left_margin="110px"
        ohos:layout_alignment="vertical_center"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="一题"
            ohos:left_margin="70px"
            ohos:top_margin="25px"
            ohos:text_size="23fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="1.A     2.B     3.A"
            ohos:left_margin="20px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="二题"
            ohos:left_margin="70px"
            ohos:top_margin="20px"
            ohos:text_size="23fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="1.ABCD   2.ABCD   3.ABCD"
            ohos:left_margin="20px"
            ohos:top_margin="25px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="三题"
            ohos:left_margin="70px"
            ohos:top_margin="30px"
            ohos:text_size="23fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="1.疑是地上霜。"
            ohos:left_margin="20px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="2.梅花香自苦寒"
            ohos:left_margin="20px"
            ohos:top_margin="25px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="来。"
            ohos:left_margin="280px"
            ohos:top_margin="25px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="3.会当水击三千里。"
            ohos:left_margin="00px"
            ohos:top_margin="30px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="四题"
            ohos:left_margin="70px"
            ohos:top_margin="20px"
            ohos:text_size="23fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="1.志趣相投的人，就算隔着高山"
            ohos:left_margin="20px"
            ohos:top_margin="25px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="和大"
            ohos:left_margin="280px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="海也不会觉得遥远。 "
            ohos:left_margin="20px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="2."
            ohos:left_margin="20px"
            ohos:top_margin="30px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="天即自然的运动刚强劲健恒久，"
            ohos:left_margin="280px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="君。"
            ohos:left_margin="280px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="子处事应效法之，力求进"
            ohos:left_margin="20px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="步，发"
            ohos:left_margin="280px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="愤图强，持之以恒。"
            ohos:left_margin="20px"
            ohos:top_margin="20px"
            ohos:text_size="20fp"
            ohos:text_color="red"/>
    </DirectionalLayout>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="恭喜您完成本轮测试与学习"
        ohos:text_size="23fp"
        ohos:text_color="red"
        ohos:top_margin="100px"
        ohos:left_margin="130px"/>
</DirectionalLayout>