<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:top_margin="20px"
            ohos:left_margin="15vp"
            ohos:text="3.有关于“鸿蒙”一词正确的是"/>

        <Text
            ohos:id="$+id:text_answer4"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="25vp"
            ohos:text_size="20fp"
            ohos:text_color="#FF3333"
            ohos:top_margin="10px"
            ohos:text="[]" />

    </DirectionalLayout>

    <Checkbox
        ohos:id="$+id:check5_box"
        ohos:top_margin="15vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="A.可解释为宇宙形成前的混沌状态。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>

    <Checkbox
        ohos:id="$+id:check6_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="B.《淮南子·俶真训》中有本词语。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check7_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="C.《庄子·在宥》中有本词语。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check8_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="D.基于全新的操作系统的名称。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_padding="20vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:left_margin="15vp"
            ohos:text="三、填空"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:top_margin="20px"
                ohos:left_margin="15vp"
                ohos:text="1、床前明月光"/>
            <TextField
                ohos:height="match_content"
                ohos:width="600px"
                ohos:basement="red"
                ohos:hint="下半句是："
                ohos:top_margin="15px"
                ohos:left_margin="25px"
                ohos:text_size="15fp"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:top_margin="45px"
                ohos:left_margin="15vp"
                ohos:text="2、宝剑锋从磨砺出"/>
            <TextField
                ohos:height="match_content"
                ohos:width="600px"
                ohos:basement="red"
                ohos:hint="下半句是："
                ohos:top_margin="30px"
                ohos:left_margin="25px"
                ohos:text_size="15fp"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:top_margin="45px"
                ohos:left_margin="15vp"
                ohos:text="3、自信人生两百年"/>
            <TextField
                ohos:height="match_content"
                ohos:width="600px"
                ohos:basement="red"
                ohos:hint="下半句是："
                ohos:top_margin="30px"
                ohos:left_margin="25px"
                ohos:text_size="15fp"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:left_margin="15vp"
                ohos:text="四、解释问答"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:top_margin="10px"
                ohos:left_margin="15vp"
                ohos:max_text_lines="4"
                ohos:text="1.志合者不以山海为远。的含义是："/>
            <TextField
                ohos:height="150px"
                ohos:width="match_parent"
                ohos:hint="翻译为中文......"
                ohos:top_margin="30px"
                ohos:left_margin="25px"
                ohos:text_size="15fp"
                ohos:background_element="$graphic:text_field_layout"
                ohos:max_text_lines="4"
                ohos:padding="20"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="18fp"
                ohos:top_margin="10px"
                ohos:left_margin="15vp"
                ohos:max_text_lines="4"
                ohos:text="2.天行健，君子以自强不息。的含义是："/>
            <TextField
                ohos:height="150px"
                ohos:width="match_parent"
                ohos:hint="翻译为中文......"
                ohos:top_margin="30px"
                ohos:left_margin="25px"
                ohos:text_size="15fp"
                ohos:background_element="$graphic:text_field_layout"
                ohos:max_text_lines="4"
                ohos:padding="20"/>
        </DirectionalLayout>

    </DirectionalLayout>
    <Button
        ohos:id="$+id:jltf_button2"
        ohos:height="150px"
        ohos:width="400px"
        ohos:text="查看答案"
        ohos:text_size="22fp"
        ohos:text_color="white"
        ohos:background_element="$graphic:jltfoval_button_element"
        ohos:top_margin="60px"
        ohos:left_margin="680px"/>
</DirectionalLayout>