<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:left_margin="80px"
        ohos:weight="2">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="热榜"
                ohos:text_color="red"
                ohos:text_size="80px"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="3">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="1、郑爽回应疑代孕生子"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="2、济源市委书记掌捆秘书长 官方调查"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="3、郑爽诉张恒民间借款纠纷案二审…"
                ohos:text_size="30px"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="-500px"
        ohos:left_margin="80px"
        ohos:weight="2">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="今日关注"
                ohos:text_size="80px"
                ohos:text_color="red"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="6">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="1、韩国网红吃播辱华后被解约"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="2、印度打疫苗首日51人现不良反应"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="3、德云社相声春晚发布演员阵容"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="4、英煤：部分新冠康复者140天内死亡"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="5、代孕产业：清华女售卵40万"
                ohos:text_size="30px"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="6、广西“百香果”女童遗体火化"
                ohos:text_size="30px"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:top_margin="-500px"
        ohos:left_margin="80px"
        ohos:weight="1">
        <Button
            ohos:text="返回"
            ohos:id="$+id:fanweiButton"
            ohos:height="100px"
            ohos:width="200px"
            ohos:text_size="50px"
            ohos:background_element="red"/>
    </DirectionalLayout>
</DirectionalLayout>