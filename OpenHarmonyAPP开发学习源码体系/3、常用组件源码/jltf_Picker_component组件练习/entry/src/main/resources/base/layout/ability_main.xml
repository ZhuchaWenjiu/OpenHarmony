<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="0px"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:orientation="horizontal">
            <Picker
                ohos:id="$+id:test_picker"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:background_element="#E1FFFF"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:selected_text_size="16fp"/>
            <Picker
                ohos:id="$+id:test_xingqi"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:background_element="#FF91FF91"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:selected_text_size="26fp"
                ohos:selected_text_color="red"
                />
            <Picker
                ohos:id="$+id:test_activity"
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:background_element="#FFFFF886"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:selected_text_size="26fp"
                ohos:selected_text_color="#FF6BFFFF"
                />
    </DirectionalLayout>
        <Component
            ohos:height="30px"
            ohos:width="match_parent"/>
        <DirectionalLayout
            ohos:height="0px"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:orientation="horizontal">
            <Picker
                ohos:id="$+id:test_bakcolor"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:background_element="#E1FFFF"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:selected_text_size="16fp"
                ohos:shader_color="#1E90FF"/>
            <Picker
                ohos:id="$+id:test_xunhuan"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:background_element="#FF91FF91"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:selected_text_size="18fp"
                ohos:selected_text_color="red"
                />
            <Picker
                ohos:id="$+id:test_style"
                ohos:height="match_parent"
                ohos:width="0px"
                ohos:weight="1"
                ohos:background_element="#FFFFF886"
                ohos:layout_alignment="horizontal_center"
                ohos:normal_text_size="16fp"
                ohos:normal_text_color="#FFA500"
                ohos:selected_text_size="18fp"
                ohos:selected_text_color="#FF6BFFFF"
                ohos:bottom_line_element="#40E0D0"
                ohos:top_line_element="#40E0D0"
                />
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>