<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
    ohos:height="600px"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="150px"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        >
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:text="创建图片"
            ohos:text_size="18fp"
            ohos:text_alignment="center"
            />
    </DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        >
        <Image
            ohos:top_margin="100px"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:image_src="$media:hhh123"
            />
    </DependentLayout>
</DependentLayout>
    <DependentLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100px"
                ohos:width="match_parent"
                ohos:text="设置图片的透明度"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="500px"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            >
            <Image
                ohos:top_margin="100px"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:image_src="$media:hhh123"
                ohos:alpha="0.5"
                />
        </DependentLayout>
    </DependentLayout>
    <DependentLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100px"
                ohos:width="match_parent"
                ohos:text="设置图片缩放系数"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="500px"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            >
            <Image
                ohos:top_margin="100px"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:image_src="$media:hhh123"
                ohos:scale_x="0.8"
                ohos:scale_y="0.8"
                />
        </DependentLayout>
    </DependentLayout>
    <DependentLayout
        ohos:height="600px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="100px"
                ohos:width="match_parent"
                ohos:text="裁剪"
                ohos:text_size="18fp"
                ohos:text_alignment="center"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="500px"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            >
            <Image
                ohos:top_margin="100px"
                ohos:height="200px"
                ohos:width="800px"
                ohos:image_src="$media:hhh123"
                ohos:clip_alignment="center"
                ohos:left_margin="150px"
                />
        </DependentLayout>
    </DependentLayout>
</DirectionalLayout>