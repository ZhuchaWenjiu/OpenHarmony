<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="200px"
        ohos:width="match_parent"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="用户协议与隐私政策引言目录演示"
            ohos:text_size="20fp"
            ohos:text_alignment="center"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="1600px"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ScrollView
            ohos:height="match_parent"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="版本更新日期：2021年03月29日"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="版本生效日期：2021年03月29日"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="引言"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="本协议及政策将帮助您了解以下内容："
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="1、我们如何收集和使用您的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="2、我们如何使用 Cookie 和同类技术"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="3、我们如何共享、转让、公开披露您的个人信息"
                    ohos:text_size="18fp"
                    ohos:multiple_lines="true"
                    ohos:max_text_lines="2"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="4、我们如何保护您的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="5、您的权利"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="6、我们如何处理未成年人的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="7、本隐私政策如何更新"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="8、如何联系我们"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="目录："
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="一、我们处理个人信息的法律依据"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="二、本隐私政策的适用范围"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="三、我们如何收集和使用您的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="四、我们如何使用 Cookie 和同类技术"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="五、我们如何共享、转让、公开披露您的个人信息"
                    ohos:text_size="18fp"
                    ohos:multiple_lines="true"
                    ohos:max_text_lines="2"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="六、我们如何存储及保护您的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="七、您管理个人信息的权利"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="八、我们如何处理未成年人的个人信息"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="九、本隐私政策的更新和通知"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="十、如何联系我们"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="十一、争议解决"
                    ohos:text_size="18fp"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text="本文档内容仅仅为演示内容"
                    ohos:text_size="18fp"
                    ohos:text_alignment="right"
                    />
            </DirectionalLayout>
        </ScrollView>
    </DirectionalLayout>
</DirectionalLayout>