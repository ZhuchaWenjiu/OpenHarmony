<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:top_padding="20vp">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:left_margin="15vp"
            ohos:text="二、多选"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:top_margin="20px"
            ohos:left_margin="15vp"
            ohos:text="1. 属于《沁园春·长沙》的诗句是"/>

            <Text
                ohos:id="$+id:text_answer3"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="25vp"
                ohos:text_size="20fp"
                ohos:text_color="#FF3333"
                ohos:top_margin="10px"
                ohos:text="[]" />

    </DirectionalLayout>

    <Checkbox
        ohos:id="$+id:check_box11"
        ohos:top_margin="15vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="A.独立寒秋,湘江北去,橘子洲头。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>

    <Checkbox
        ohos:id="$+id:check_box22"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="B.鹰击长空,鱼翔浅底,万类霜天竞自由。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check_box33"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="C.携来百侣曾游,忆往昔峥嵘岁月稠。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check_box44"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="D.曾记否,到中流击水,浪遏飞舟？"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:top_margin="60px"
            ohos:left_margin="15vp"
            ohos:text="2.和“故天将降大任于是人也”相关联的是"/>

        <Text
            ohos:id="$+id:text_answer5"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="25vp"
            ohos:text_size="20fp"
            ohos:text_color="#FF3333"
            ohos:top_margin="10px"
            ohos:text="[]" />

    </DirectionalLayout>

    <Checkbox
        ohos:id="$+id:check1_box"
        ohos:top_margin="15vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="A.出自《孟子·告子下》。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>

    <Checkbox
        ohos:id="$+id:check2_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="B.必先苦其心志,劳其筋骨。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check3_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="C.饿其体肤,空乏其身,行拂乱其所为。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>
    <Checkbox
        ohos:id="$+id:check4_box"
        ohos:top_margin="12vp"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="D.所以动心忍性,曾益其所不能。"
        ohos:text_size="20fp"
        ohos:text_color_on="#FF3333"
        ohos:text_color_off="#000000"/>


    <Button
        ohos:id="$+id:jltf_button1"
        ohos:height="150px"
        ohos:width="400px"
        ohos:text="继续答题"
        ohos:text_size="22fp"
        ohos:text_color="white"
        ohos:background_element="$graphic:jltfoval_button_element"
        ohos:top_margin="120px"
        ohos:left_margin="670px"/>
</DirectionalLayout>