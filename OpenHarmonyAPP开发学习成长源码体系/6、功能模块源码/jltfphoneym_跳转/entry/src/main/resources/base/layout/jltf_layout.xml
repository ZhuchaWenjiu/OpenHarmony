<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$media:image4">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:weight="1">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="蛟龙腾飞"
            ohos:text_size="80px"
            ohos:top_margin="200px"
            ohos:left_margin="340px"
            ohos:text_color="white"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content">
        <Image
            ohos:width="680px"
            ohos:height="680px"
            ohos:image_src="$media:index17.jpg"
            ohos:left_margin="200px"
            ohos:top_margin="20px"/>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:weight="2">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="80px"
            ohos:multiple_lines="true"
            ohos:left_margin="100px"
            ohos:text="你好，欢迎来到鸿蒙时代！"
            ohos:top_margin="160px"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="65px"
            ohos:multiple_lines="true"
            ohos:left_margin="100px"
            ohos:top_margin="20px"
            ohos:text="蛟龙腾飞，鸿蒙先行者，"
            ohos:text_color="white"/>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="65px"
            ohos:multiple_lines="true"
            ohos:left_margin="100px"
            ohos:top_margin="15px"
            ohos:text="全心全意为你提供鸿蒙各项服务！"
            ohos:text_color="white"/>
    </DirectionalLayout>

</DirectionalLayout>