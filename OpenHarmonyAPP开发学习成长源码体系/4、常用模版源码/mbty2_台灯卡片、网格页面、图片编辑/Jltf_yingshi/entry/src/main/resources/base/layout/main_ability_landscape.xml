<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="$graphic:main_ability_title_background">

    <include
        ohos:id="$id:app_bar"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:layout="$layout:app_bar_layout" />

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:id="$+id:privacy"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="vertical"
            ohos:left_margin="$float:main_layout_margin"
            ohos:right_margin="$float:main_layout_margin">
            <Image
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:layout_alignment="horizontal_center"
                ohos:image_src="$media:icon_privacy_public" />
            <Text
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:text="$string:privacy_title"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="$float:text_title2_size"/>
            <Text
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:text="$string:content_privacy_chap1"
                ohos:multiple_lines="true"
                ohos:top_margin="$float:title_text_top_padding"
                ohos:text_size="$float:know_more_margin"/>
            <Text
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:text="$string:content_privacy_chap2"
                ohos:multiple_lines="true"
                ohos:top_margin="$float:privacy_text2_margin"
                ohos:text_size="$float:text_size"/>
            <Text
                ohos:id="$+id:know_more"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:top_margin="$float:know_more_margin"
                ohos:bottom_margin="$float:know_more_margin"/>
        </DirectionalLayout>

    </ScrollView>

</DirectionalLayout>