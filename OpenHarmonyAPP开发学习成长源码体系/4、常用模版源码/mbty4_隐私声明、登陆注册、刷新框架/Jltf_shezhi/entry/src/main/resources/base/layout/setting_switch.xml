<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$color:colorCardViewBg"
    ohos:orientation="vertical">
    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="$float:singleCardViewHeight"
        ohos:width="match_parent">
        <Image
            ohos:id="$+id:double_line_list_icon"
            ohos:height="$float:doubleLineItemLeftIconHeight"
            ohos:width="$float:doubleLineItemLeftIconWidth"
            ohos:align_parent_left="true"
            ohos:center_in_parent="true"
            ohos:image_src="$graphic:icon_star"
            ohos:left_margin="$float:doubleLineItemLeftIconLeftMargin"
            ohos:right_margin="$float:doubleLineItemLeftIconRightMargin"/>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:id="$+id:double_line_text_area"
            ohos:height="$float:singleCardViewHeight"
            ohos:width="match_content"
            ohos:right_of="$id:double_line_list_icon">
            <Text
                ohos:id="$+id:double_line_main_content"
                ohos:height="$float:doubleLineItemMainTextHeight"
                ohos:width="match_content"
                ohos:bottom_margin="$float:doubleLineItemMainTextBottomMargin"
                ohos:text_alignment="left|bottom"
                ohos:text_size="$float:textSizeBody1"
                ohos:top_margin="$float:doubleLineItemMainTextTopMargin"/>
            <Text
                ohos:id="$+id:double_line_sub_content"
                ohos:height="$float:doubleLineItemSubTextHeight"
                ohos:width="match_content"
                ohos:bottom_margin="$float:doubleLineItemSubTextBottomMargin"
                ohos:text_alignment="left|top"
                ohos:text_size="$float:textSizeBody2"
                ohos:top_margin="$float:doubleLineItemSubTextTopMargin"/>
        </DirectionalLayout>
        <DependentLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:id="$+id:double_line_switch_hot_area"
            ohos:height="$float:doubleLineItemRightIconHotAreaHeight"
            ohos:width="$float:doubleLineItemRightIconHotAreaWidth"
            ohos:align_parent_right="true"
            ohos:center_in_parent="true"
            ohos:right_margin="$float:doubleLineItemRightIconHotAreaRightMargin">
            <Image
                ohos:id="$+id:double_line_switch_enable"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:center_in_parent="true"
                ohos:image_src="$graphic:icon_switch_enable"
                ohos:visibility="hide"/>
            <Image
                ohos:id="$+id:double_line_switch_disable"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:center_in_parent="true"
                ohos:image_src="$graphic:icon_switch_disable"
                ohos:visibility="visible"/>
        </DependentLayout>
    </DependentLayout>
    <Component
        ohos:id="$+id:item_divider"
        ohos:height="$float:listDividerHeight"
        ohos:width="match_parent"
        ohos:background_element="$color:colorListDivider"
        ohos:left_margin="$float:singleCardViewLeftMargin"
        ohos:right_margin="$float:singleCardViewRightMargin"/>
</DirectionalLayout>