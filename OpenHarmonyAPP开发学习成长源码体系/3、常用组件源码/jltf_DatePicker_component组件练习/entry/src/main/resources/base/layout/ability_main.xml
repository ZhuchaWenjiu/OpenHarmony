<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:height="80px"
        ohos:width="match_parent"
        ohos:text="创建一个日期选择器"
        ohos:text_size="18fp"/>
    <DirectionalLayout
        ohos:height="400px"
        ohos:width="match_parent">
        <DatePicker
            ohos:id="$+id:date_pick"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="26fp"
            ohos:background_element="#FF6FE0FF"
            ohos:top_line_element="#9370DB"
            ohos:bottom_line_element="#9370DB">
        </DatePicker>
    </DirectionalLayout>
    <Component
        ohos:height="60px"
        ohos:width="match_parent"/>
    <Text
        ohos:height="80px"
        ohos:width="match_parent"
        ohos:text="设置最小日期"
        ohos:text_size="18fp"/>
    <DirectionalLayout
        ohos:height="400px"
        ohos:width="match_parent">
        <DatePicker
            ohos:id="$+id:date_pick2"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="26fp"
            ohos:min_date="1627747200"
            ohos:background_element="#FF6FE0FF"
            ohos:operated_text_color="#FF8DFF70">
        </DatePicker>
    </DirectionalLayout>
    <Component
        ohos:height="60px"
        ohos:width="match_parent"/>
    <Text
        ohos:height="80px"
        ohos:width="match_parent"
        ohos:text="设置最大日期"
        ohos:text_size="18fp"/>
    <DirectionalLayout
        ohos:height="400px"
        ohos:width="match_parent">
        <DatePicker
            ohos:id="$+id:date_pick3"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text_size="26fp"
            ohos:max_date="1630339200"
            ohos:shader_color="#FFB8FF97">
        </DatePicker>
    </DirectionalLayout>
</DirectionalLayout>