<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:weight="1">
        <Text
            ohos:height="200px"
            ohos:width="match_content"
            ohos:text="时事热点"
            ohos:text_size="80px"
            ohos:top_margin="20px"
            ohos:text_color="blue"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="300px"
        ohos:width="match_parent"
        ohos:weight="4"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="2"
            ohos:left_margin="80px"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="军事热点"
                ohos:text_color="red"
                ohos:text_alignment="horizontal_center"
                ohos:text_size="50px"/>
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20px"
                ohos:image_src="$media:junshi2.jpg"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="2"
            ohos:left_margin="100px"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="疫情热点"
                ohos:text_color="red"
                ohos:text_alignment="horizontal_center"
                ohos:text_size="50px"/>
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20px"
                ohos:image_src="$media:yiqing2.jpg"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="2"
            ohos:left_margin="100px"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="国际新闻"
                ohos:text_color="red"
                ohos:text_alignment="horizontal_center"
                ohos:text_size="50px"/>
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="20px"
                ohos:image_src="$media:guoji2.jpg"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="-800px"
        ohos:left_margin="80px"
        ohos:weight="4">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:weight="1">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_alignment="horizontal_center"
                ohos:text="热点新闻"
                ohos:text_color="red"
                ohos:text_weight="800px"
                ohos:text_size="80px"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:top_margin="-200px"
            ohos:weight="1">
            <Image
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:sucai4.jpeg"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="美国对华为芯片压制制裁升级"
                ohos:text_size="60px"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:top_margin="-200px"
            ohos:weight="1">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:multiple_lines="true"
                ohos:text="就在13日，美国总统特朗普宣布将针对华为和中兴等中国公司的供货禁令期限延长一年。
美国自2019年5月开始将华为及其114家海外机构列入了“实体清单”，但是华为仍继续
使用美国技术、软件来设计半导体芯片并通过使用美国设备的海外代工厂来生产，要
求禁止美国公司使用对威胁美国国家安全的公司制造的电信设备，其中就包括华为和
中兴等中国公司。这对华为等一系列科技公司来说在短时间内算是一个不小的打击！"
                ohos:text_size="30px"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:left_margin="80px"
        ohos:weight="1">
        <Button
            ohos:height="100px"
            ohos:width="400px"
            ohos:focus_border_radius="100px"
            ohos:text="前往热点中心"
            ohos:text_size="50px"
            ohos:text_color="blue"
            ohos:background_element="red"
            ohos:id="$+id:xinwenButton"/>
    </DirectionalLayout>
</DirectionalLayout>